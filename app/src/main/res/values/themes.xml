<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Producto_AplicacionesMoviles" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/app_titulo</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/app_titulo</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="StylesAuth" parent="Theme.Producto_AplicacionesMoviles">
        <item name="android:statusBarColor" tools:targetApi="l">#0A2059</item>

        <item name="android:navigationBarColor" tools:targetApi="l">#002445</item>
    </style>


    <style name="styleButtonLogin" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="cornerRadius">14dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="styleInputTextLogin" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">#057AA7</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textColorHint">#068DC0</item>
    </style>


    <style name="SplashTheme" parent="Theme.Design.NoActionBar">
        <item name="android:windowBackground">
            @drawable/splash_background
        </item>
        <item name="android:statusBarColor" tools:targetApi="l">#0A2059</item>
        <item name="android:navigationBarColor" tools:targetApi="l">#002445</item>
    </style>

    <style name="Theme.Producto_AplicacionesMoviles.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Producto_AplicacionesMoviles.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Producto_AplicacionesMoviles.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>