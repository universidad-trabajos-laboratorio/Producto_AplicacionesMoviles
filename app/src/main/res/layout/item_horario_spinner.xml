<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingHorizontal="20dp"
    >
    <TextView
        android:id="@+id/dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Lunes"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20dp"
        android:textColor="#000"
        />
    <LinearLayout
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/dia"
        >

        <TextView
            android:id="@+id/tv_horaManana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="7:00 am - 10:00 am"
            android:textSize="20dp"
            android:drawableStart="@drawable/ic_icon_dia"
            android:drawablePadding="8dp"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/tv_horaTarde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_icon_noche"
            tools:text="1:00 pm - 5:00 pm"
            android:textSize="16dp"
            android:drawablePadding="8dp"
            android:textColor="#000"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>